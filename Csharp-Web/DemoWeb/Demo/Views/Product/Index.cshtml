@using Demo.Models.Product;
@model IEnumerable<ProductViewModel>

@{
	ViewBag.Title = "All Products";
}
<form method="post">
    <div class="input-group" style="margin-bottom: 10px">
        <input asp-controller="Product" asp-actions="index" name="search" type="search" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
        <button type="submit" class="btn btn-outline-primary">search</button>
    </div>
</form>

<div class="row row-cols-6">
    <div class="col-lg-4">
        <div class="card" style="width: 18rem">
            <div class="card-header">@ViewData["Title"]</div>
            <ul class="list-group list-group-flush">
                @foreach (ProductViewModel product in Model)
                {
                    <li class="list-group-item"><a href="/Product/Details/@product.Id">@product.Name - @product.Price$</a></li>
                }
            </ul>
        </div>
    </div>
</div>