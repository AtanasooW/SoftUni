
@{
	ViewBag.Title = "NumbersToN";
	int count = ViewBag.Count;
}

@if (count > 0)
{
	<h2>@ViewBag.Message@ViewBag.Count</h2>
}
else
{
	<h2>@ViewBag.Message N</h2>
}
<form method="post">
	<input asp-controller="Home" asp-action="NumbersToN" name="count" />
	<button type="submit">Submit</button>
</form>
<ul>
	@for (int i = 1; i <= ViewBag.Count; i++)
	{
		<li>@i</li>
	}
</ul>
